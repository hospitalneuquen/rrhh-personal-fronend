{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es6",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "include": [
    "./**/*.ts",
    "./node_modules/@andes/**/*.ts",
    "./node_modules/ng2-slugify/**/*.ts"
  ],
  "exclude": [
    "../node_modules/@schematics/**/*.ts",
    "../node_modules/karma/**/*.ts"
  ]
}
